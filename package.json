{
  "name": "tslint-react",
  "version": "0.2.0",
  "description": "React-specific rules for TSLint",
  "repository": {
    "type": "git",
    "url": "https://github.com/palantir/tslint-react.git"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "npm-run-all -p compile lint",
    "clean": "rm -rf build/",
    "compile": "tsc -p ./",
    "copy": "cp -f package.json README.md build/",
    "lint": "tslint 'src/**/*.ts'",
    "preversion": "npm-run-all clean test copy",
    "test": "npm-run-all build test-rules",
    "test-rules": "for path in ./test/rules/*; do tslint -r ./build/rules/ --test $path; done"
  },
  "devDependencies": {
    "colors": "^1.1.2",
    "glob": "^7.0.3",
    "npm-run-all": "^2.1.2",
    "path": "^0.12.7",
    "tslint": "^3.11.0",
    "typescript": "^1.8.10"
  }
}
